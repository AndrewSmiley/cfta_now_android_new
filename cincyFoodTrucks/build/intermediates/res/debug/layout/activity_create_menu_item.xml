<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/txtNewMenuItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblNewMenuItemTitle"
        android:layout_below="@+id/lblNewMenuItemTitle"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/lblNewMenuItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblNewMenuItemDescription"
        android:text="@string/strNewMenuItemTitle" />

    <TextView
        android:id="@+id/lblNewMenuItemDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtNewMenuItemTitle"
        android:layout_marginLeft="23dp"
        android:text="@string/strNewMenuItemDescription" />

    <EditText
        android:id="@+id/txtNewMenuItemDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblNewMenuItemDescription"
        android:layout_below="@+id/lblNewMenuItemDescription"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/lblNewItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtNewMenuItemDescription"
        android:layout_below="@+id/txtNewMenuItemDescription"
        android:layout_marginTop="19dp"
        android:text="@string/strNewMenuItemPrice" />

    <EditText
        android:id="@+id/txtNewMenuItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblNewItemPrice"
        android:layout_below="@+id/lblNewItemPrice"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="@string/strNewMenuItemPriceHint"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnCreateNewMenuItemSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="23dp"
        android:onClick="onSubmitNewMenuItemClicked"
        android:text="@string/strSubmit" />

</RelativeLayout><!-- From: file:/Users/Andrew/StudioProjects/CincyFoodTrucks/cincyFoodTrucks/src/main/res/layout/activity_create_menu_item.xml -->